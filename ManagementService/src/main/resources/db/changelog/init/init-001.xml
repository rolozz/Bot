<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="00001" author="markusha">
        <createTable tableName="joke">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean"/>
        </createTable>
        <createIndex indexName="idx_is_active" tableName="joke">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

    <changeSet id="00002" author="markusha">
        <createTable tableName="subscribe">
            <column name="username" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(255)"/>
            <column name="count" type="bigint"/>
        </createTable>
        <createIndex indexName="idx_city" tableName="subscribe">
            <column name="city"/>
        </createIndex>
    </changeSet>

    <changeSet id="00003" author="markusha">
        <createTable tableName="request_info">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00004" author="markusha">
        <addForeignKeyConstraint
                baseTableName="request_info"
                baseColumnNames="username"
                referencedTableName="subscribe"
                referencedColumnNames="username"
                constraintName="fk_request_info_subscribe_username"/>
    </changeSet>

</databaseChangeLog>